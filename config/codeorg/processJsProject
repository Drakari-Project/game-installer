# make sure to switch gsed to sed on linux!
sed -i '/initMobileControls/d' "$1/code.js"
sed -i '35i document.querySelector("#sketch").style = "";' "$1/code.js"
echo "#sketch { position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); } canvas { scale: 1.7; }" >> "$1/gamelab.css"
cp ./config/codeorg/gamelab-api-patched.js "$1/gamelab-api.js"
ln -s "$1/index.html" "$HOME/systems/codeorg/$2.game"
ln -s "$HOME/systems/codeorg/$2.game" "$HOME/roms/$3/$2.game"
